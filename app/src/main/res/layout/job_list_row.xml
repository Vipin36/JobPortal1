<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    android:layout_margin="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/textview_margin"
        android:layout_marginRight="@dimen/textview_margin"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jobLocationRowTextView"
            android:text="location"
            android:textSize="@dimen/midium_text_size"
            android:textColor="@color/red"
            android:layout_gravity="end"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeAndDateRowTextView"
            android:text="date"
            android:textSize="@dimen/midium_text_size"
            android:layout_gravity="end"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jobProfileRowTextView"
            android:text="job profile"
            android:textSize="@dimen/midium_text_size"
            android:textColor="@color/red"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="company name"
            android:id="@+id/companyNameRowTextView"
            android:textSize="@dimen/midium_text_size"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>

</android.support.v7.widget.CardView>