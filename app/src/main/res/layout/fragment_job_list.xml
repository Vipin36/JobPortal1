<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/skyBlue"
    tools:context="palletechnology.com.jobportal.JobListFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_textview_margin"
        android:textSize="@dimen/midium_text_size"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/textview_margin"
        android:layout_marginRight="@dimen/textview_margin"
        android:id="@+id/getJobTextView"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/textview_margin"
        android:layout_marginTop="@dimen/half_textview_margin"
        android:weightSum="1">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="0.93"
            android:backgroundTint="@color/white"
            android:id="@+id/jobTypeSpinner"
            ></Spinner>
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />
   <Button
       android:layout_width="128dp"
       android:layout_height="44dp"
       android:background="@drawable/blank_button"
       android:textAllCaps="false"
       android:textSize="@dimen/midium_text_size"
       android:textColor="@color/white"
       android:layout_gravity="end"
       android:layout_marginRight="@dimen/textview_margin"
       android:text="@string/filtrString"
       android:id="@+id/filterButton"/></LinearLayout>

<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/half_textview_margin"
    android:layout_marginRight="@dimen/textview_margin"
    android:layout_marginLeft="@dimen/textview_margin"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/textview_margin"
    android:id="@+id/jobRecyclerView">

</android.support.v7.widget.RecyclerView>


</LinearLayout>
