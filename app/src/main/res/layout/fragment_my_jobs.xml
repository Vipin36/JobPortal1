<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/skyBlue"
    tools:context="palletechnology.com.jobportal.MyJobsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/myJobsString"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        android:gravity="center" />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/textview_margin"
        android:layout_marginLeft="@dimen/textview_margin"
        android:layout_marginRight="@dimen/textview_margin"
        android:layout_marginBottom="@dimen/textview_margin"
        android:id="@+id/myJobsRecyclerView"
        android:background="@color/white"></android.support.v7.widget.RecyclerView>

</LinearLayout>
